.card-product {
  overflow: hidden;
  height: 120px;
  background: white;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
}

.card-product image {
  height: 100%;
  width: 120px;
  object-fit: fill;
}

.card-product h2 {
  font-size: 8px;
  font-weight: bold;
  margin: 0;
}

.card-product-infos p {
  font-size: 8px;
  line-height: 1.4;
  opacity: .7;
  margin-bottom: 0;
  margin-top: 8px;
}

.card-product .card-product-infos {
  padding: 16px;
}


