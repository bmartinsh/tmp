<form bindsubmit="bindSubmit">
  <view class="section">
    <view class="section__title">Name</view>
    <input name="name" placeholder="please your name here" />
  </view>

  <view class="section">
    <view class="section__title">Your story</view>
    <textarea name="content" placeholder="please write your story here" ></textarea>
  </view>

  <view class="btn-area">
    <button formType="submit">Submit</button>
  </view>
</form>